extends base

block content
  main.main    
   .login-form
      h2.heading-secondary.ma-bt-lg Change your password
      form.form.form--reset
        .form__group
          label.form__label(for='password') New Password
          input#password.form__input(type='password', placeholder='••••••••', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password Confirm
          input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Change
